<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Внешний круг -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#000000" /> <!-- Черный цвет для внешнего кольца -->
            <size
                android:width="48dp"
                android:height="48dp"/>
            <corners android:radius="24dp"/> <!-- Радиус для создания круга -->
        </shape>
    </item>

    <!-- Внутренний круг, который делает центр прозрачным -->
    <item android:right="12dp" android:left="12dp" android:top="12dp" android:bottom="12dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@android:color/transparent" />
            <size
                android:width="24dp"
                android:height="24dp"/>
            <corners android:radius="12dp"/> <!-- Радиус для создания внутреннего круга -->
        </shape>
    </item>
</layer-list>
